@page
@model PIMHotelaria.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservas</h4>
<hr />

<form method="post">
    <div class="row">
        <div class="col-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservas.dt_Entrada" class="control-label"></label>
                <input asp-for="Reservas.dt_Entrada" class="form-control" />
                <span asp-validation-for="Reservas.dt_Entrada" class="text-danger"></span>
            </div>
        </div>
        <div class="col-5">
            <div class="form-group">
                <label asp-for="Reservas.dt_Saida" class="control-label"></label>
                <input asp-for="Reservas.dt_Saida" class="form-control" />
                <span asp-validation-for="Reservas.dt_Saida" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label asp-for="Reservas.num_Pessoas" class="control-label"></label>
                <input asp-for="Reservas.num_Pessoas" class="form-control" />
                <span asp-validation-for="Reservas.num_Pessoas" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Reservas.mtd_Acesso" /> @Html.DisplayNameFor(model => model.Reservas.mtd_Acesso)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>



<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
