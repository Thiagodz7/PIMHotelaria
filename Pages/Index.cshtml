@page
@model IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<style>
    .fundoNavbar {
        background-color: rgba(0, 0, 0, 0.363);
    }

    .corMenuReduzido {
        background-color: white;
    }
</style>

@* Correção de erros EFETUANDO NOVO PUSH*@
<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/paisagem.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="background-color: rgba(0, 0, 0, 0.363)">Paisagens</h5>
                    <p style="background-color: rgba(0, 0, 0, 0.363)">Essa é uma das paisagens das praias próximas.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/paisagem2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="background-color: rgba(0, 0, 0, 0.363)">Paisagens</h5>
                    <p style="background-color: rgba(0, 0, 0, 0.363)">Melhores paisagens você encontra aqui.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/paisagem3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="background-color: rgba(0, 0, 0, 0.363)">Paisagens</h5>
                    <p style="background-color: rgba(0, 0, 0, 0.363)">Venha curtir o verão no nosso hotel.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!-- Features section-->
<section class="py-5 border-bottom" id="features">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-collection"></i></div>
                <img class="img-fluid" src="img/quarto1.jpg" width="280" height="250" style="border-color:black" alt="Alternate Text" />
                <h2 class="h4 fw-bolder">Quarto Básico</h2>
                <p>Quarto basico para aproveitar alguns dias sem inclusão de serviço de quarto</p>
                <a class="text-decoration-none" href="#!">
                    Faça sua Reserva - Em Breve
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="col-lg-4 mb-5 mb-lg-0">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-building"></i></div>
                <img class="img-fluid" src="img/quarto2.jpeg" width="280" height="250" alt="Alternate Text" />
                <h2 class="h4 fw-bolder">Quarto de Luxo</h2>
                <p>Quarto de luxo para aproveitar o melhor que o hotel Belo Porto tem a oferecer dias com inclusão de serviços de quarto</p>
                <a class="text-decoration-none" href="#!">
                    Faça sua Reserva - Em Breve
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="col-lg-4">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-toggles2"></i></div>
                <img class="img-fluid" src="img/quarto3.jpeg" width="280" height="250" alt="Alternate Text" />
                <h2 class="h4 fw-bolder">Quarto Topo</h2>
                <p>O Quarto Topo te dá acesso direto à uma das melhores vistas de nossa cidade, sem contar a facilidade de acesso à piscina</p>
                <a class="text-decoration-none" href="#!">
                    Faça sua Reserva - Em Breve
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</section>


